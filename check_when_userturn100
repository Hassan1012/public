def calculate_year(name, age):
    current_year = 2023  # Replace with the current year
    years_until_100 = 100 - age
    year_when_100 = current_year + years_until_100
    return f"Hi {name}, you will turn 100 years old in the year {year_when_100}."

name = input("Please enter your name: ")
age = int(input("Please enter your age: "))

print(calculate_year(name, age))
